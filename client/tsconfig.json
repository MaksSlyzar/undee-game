{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@network/*": ["network/*"],
      "@game/*": ["game/*"],
      "@game-objects/*": ["game/game-objects/*"],
      "@gui/*": ["gui/*"],
      "@hud/*": ["hud/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}

