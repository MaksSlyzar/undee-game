{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/core/*"],
      "@network/*": ["src/network/*"],
      "@game/*": ["src/game/*"],
      "@game-objects/*": ["src/game/game-objects/*"],
      "@gui/*": ["src/gui/*"],
      "@hud/*": ["src/hud/*"],
      "@shared/*": ["../shared/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src", "../shared"]
}

