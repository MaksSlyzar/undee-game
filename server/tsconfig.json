{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@network/*": ["network/*"],
      "@game/*": ["game/*"],
      "@game-objects/*": ["game/game-objects/*"],
      "@managers/*": ["game/managers/*"],
      "@cluster/*": ["game/managers/cluster/*"],
      "@core/*": ["core/*"]
    }
  },
  "rootDir": "./src",
  "outDir": "./dist",
  "include": ["src"]
}

