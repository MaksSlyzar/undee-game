{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "rootDirs": ["./src", "../shared"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@network/*": ["src/network/*"],
      "@game/*": ["src/game/*"],
      "@game-objects/*": ["src/game/game-objects/*"],
      "@managers/*": ["src/game/managers/*"],
      "@cluster/*": ["src/game/managers/cluster/*"],
      "@core/*": ["src/core/*"],
      "@shared/*": ["../shared/*"]
    }
  },
  "include": ["src", "../shared"]
}

